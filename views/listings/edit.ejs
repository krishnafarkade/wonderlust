<% layout("/layouts/boilerplate") -%>

    <form method="POST" action="/listing/<%= listing._id %>?_method=PUT" class=" needs-validation" novalidate  enctype="multipart/form-data">

    <div class="row mt-3">
        <div class="col-7 offset-2">

    <h3>Edit your listing</h3>

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input id="title" class="form-control" name="listing[title]" value="<%= listing.title %>" type="text" required>

        
      <div class="valid-feedback">
      Looks good!
    </div>
        </div>

        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
       <textarea id="description" class="form-control" name="listing[description]" required><%= listing.description %></textarea>

          <div class="invalid-feedback">
      please enter the description about listing
    </div>
    </div>

        <div class="mb-3">
          <p>Original listing image</p>
        <image src="<%= orginalImage %>"> </image>
    </div>
            <div class="mb-3">
        <label for="image" class="form-label">Upload new image</label>
        <input id="image" class="form-control" name="listing[image][url]" value="<%= listing.image.url %>" type="file" >
    </div>

    <div class="row">
        <div class="mb-3 col-4">
        <label for="price" class="form-label">Price</label>
        <input id="price" class="form-control" name="listing[price]" value="<%= listing.price %>"  required>
        
  <div class="invalid-feedback">
      please enter the valid price
    </div>
    </div>

        <div class="mb-3 col-8">
        <label for="location" class="form-label">Location</label>
        <input id="location" class="form-control" name="listing[location]" value="<%= listing.location %>" type="text" required>
         <div class="invalid-feedback">
      please enter the location
    </div>
    </div>

        <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input id="country" class="form-control" name="listing[country]" value="<%= listing.country %>" type="text" required>
        <div class="invalid-feedback">
      please enter the country name
    </div>
    </div>  
  </div>


        <button class="btn btn-dark edit-btn mt-3  ">Edit</button>
        <br><br>
    </form>
</div>
</div>

</body>
</html>